{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@": ["./src"],
      "@apis": ["./src/apis"],
      "@assets": ["./src/assets"],
      "@common": ["./src/common"],
      "@components": ["./src/components"],
      "@layouts": ["./src/layouts"],
      "@pages": ["./src/pages"],
      "@router": ["./src/router"],
      "@store": ["./src/store"],
      "@plugins": ["./src/plugins"],
    },
    "jsx": "preserve",
    "types": ["element-plus/global"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
